{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": ["./file-types/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"overrides": [
		{
			"include": [".vscode/*.json"],
			"json": {
				"parser": {
					"allowComments": true
				}
			}
		}
	]
}
