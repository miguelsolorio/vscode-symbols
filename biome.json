{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!file-types"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 150
	},
	"overrides": [
		{
			"includes": [".vscode"],
			"json": {
				"parser": {
					"allowComments": true
				}
			}
		}
	]
}
